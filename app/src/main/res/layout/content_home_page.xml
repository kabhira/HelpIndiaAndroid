<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.HomePage"
    tools:showIn="@layout/activity_home_page">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/need_help_text"
        android:id="@+id/need_help_id"
        android:layout_marginTop="110px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_with_border"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/need_help_desc"
        android:id="@+id/textView"
        android:layout_below="@+id/need_help_id"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/need_help_id"
        android:layout_alignRight="@+id/need_help_id" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/to_help_text"
        android:id="@+id/to_help_id"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42px"
        android:background="@drawable/button_with_border"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/to_help_desc"
        android:id="@+id/textView2"
        android:layout_below="@+id/to_help_id"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/to_help_id"
        android:layout_alignRight="@+id/to_help_id" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/track_request_text"
        android:id="@+id/track_request_id"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_with_border"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="75px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/track_help_desc"
        android:id="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/track_request_id"
        android:layout_alignLeft="@+id/track_request_id"
        android:layout_alignRight="@+id/track_request_id" />

</RelativeLayout>
