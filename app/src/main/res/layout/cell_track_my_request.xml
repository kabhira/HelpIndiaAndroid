<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/upper_bar"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.android.volley.toolbox.NetworkImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/cell_track_request_cat_image"
                    android:src="@mipmap/ic_launcher"
                    android:layout_margin="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_large"
                    android:text="Medium Text"
                    android:id="@+id/cell_track_request_cat_name"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/padding_icon_title" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                android:id="@+id/separator1"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/upper_bar"
                android:layout_margin="@dimen/wall_margin" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator1"
                android:id="@+id/middle_bar"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/wall_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_medium"
                    android:text="@string/cell_track_request_profile_title"
                    android:id="@+id/cell_track_request_volunteer_title"
                    android:paddingBottom="@dimen/padding_heading_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_small"
                    android:text="Medium Text"
                    android:id="@+id/cell_track_request_volunteer_name"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/cell_track_request_volunteer_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_small"
                    android:text="Medium Text"
                    android:id="@+id/cell_track_request_volunteer_mobile"
                    android:layout_below="@+id/cell_track_request_volunteer_name" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                android:id="@+id/separator2"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/middle_bar"
                android:layout_margin="@dimen/wall_margin" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lower_bar"
                android:layout_below="@+id/separator2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_medium"
                    android:text="@string/cell_track_request_time"
                    android:id="@+id/textView8"
                    android:layout_below="@+id/textView7"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_large"
                    android:text="@string/cell_track_request_label"
                    android:id="@+id/textView7"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>